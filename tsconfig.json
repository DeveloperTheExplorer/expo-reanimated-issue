{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "$/*": [
                "./src/components/$pages/*"
            ],
            "assets/*": [
                "./assets/*"
            ],
        },
    },
    "include": [
        "declarations.d.ts",
        "src/**/*",
        "./App.tsx"
    ],
}